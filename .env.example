# Environment variables for the freelance + AI platform
# Copy this file to .env and fill in your actual values

# Database configuration
DATABASE_URL="postgresql://username:password@localhost:5432/hackathon_services"

# Mistral AI API Key (required for AI services)
# Get your API key from: https://console.mistral.ai/
MISTRAL_API_KEY="your_mistral_api_key_here"

# Optional: Other API keys
# OPENAI_API_KEY="your_openai_key_here"

# Application settings
NODE_ENV="development"
NUXT_SECRET_KEY="your_secret_key_here"

# Email service (Brevo/Sendinblue)
BREVO_API_KEY="your_brevo_api_key_here"

# File upload settings
MAX_FILE_SIZE="10485760" # 10MB in bytes
UPLOAD_DIR="/tmp/ai-service-uploads"
